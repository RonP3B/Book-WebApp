<section class="container section">
  <div class="card mt-3 mb-3">
    <div class="card-header">
      {{{logosObj.svgResetPassword}}}
      <h5 class="mb-0">Recuperar cuenta</h5>
    </div>
    <div class="card-body">
      <form 
        method="POST" 
        action="/forgot-password/{{#if findUser}}find-user{{/if}}{{#if confirmCode}}confirm-code{{/if}}{{#if resetPass}}reset-password{{/if}}"
        class="form-{{#if resetPass}}reset{{else}}save{{/if}}"
      >
        <input name="_csrf" value="{{csrfToken}}" type="hidden" />
        <div class="form-group mb-2">
          {{#if findUser}}
            <label for="username">Nombre de usuario:</label>
            <input
              class="form-control form-control-sm required-field"
              type="text"
              id="username"
              name="username"
              autofocus
            />
          {{/if}}
          {{#if confirmCode}}
            <label for="code">Ingresa el código de confirmación:</label>
            <input
              class="form-control form-control-sm required-field"
              type="text"
              id="code"
              name="code"
              autofocus
            />
          {{/if}}
          {{#if resetPass}}
            <div class="form-group mb-2">
              <label for="password">Nueva contraseña:</label>
              <input
                class="form-control form-control-sm required-field"
                type="password"
                id="password"
                name="password"
              />
            </div>
            <div class="form-group mb-2">
              <label for="confirmPassword">Confirmar nueva contraseña:</label>
              <input
                class="form-control form-control-sm required-field"
                type="password"
                id="confirmPassword"
                name="confirmPassword"
              />
            </div>
          {{/if}}
        </div>
        <div class="buttons-container">
          <a href="/" class="btn button">
            VOLVER AL INICIO DE SESIÓN
          </a>
          <button
            type="button"
            class="btn button ms-1"
            id="btn-{{#if resetPass}}reset{{else}}save{{/if}}"
          >
            {{#if findUser}}ENCONTRAR USUARIO{{/if}}
            {{#if confirmCode}}COMPROBAR CÓDIGO{{/if}}
            {{#if resetPass}}CAMBIAR CONTRASEÑA{{/if}}
          </button>
        </div>
      </form>
    </div>
  </div>
</section>