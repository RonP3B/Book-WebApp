<section class="container section">
  <div class="card mt-3 mb-3">
        <div class="card-header">
          {{#if edit}} 
              {{{logosObj.svgPapaDelRapDominicano}}}
          {{else}}
            {{{logosObj.svgAdd}}}
          {{/if}} 
          <h5 class="mb-0">{{#if edit}}Edi{{else}}Crea{{/if}}ci√≥n de autor</h5>
        </div>
        <div class="card-body">
          <form
            method="POST"
            action="/admin-authors/{{#if edit}}edit{{else}}add{{/if}}" 
            class="form-save" 
          >
            <div class="form-group mb-2">
              <label for="name">Nombre del autor:</label>
              <input
                class="form-control form-control-sm required-field"
                type="text"
                id="name"
                name="name"
                {{#if edit}}value="{{author.name}}"{{/if}}
              />
            </div>
            <div class="form-group mb-2">
              <label for="email">Correo electronico del autor:</label>
              <input
                class="form-control form-control-sm required-field"
                type="email"
                id="email"
                name="email"
                {{#if edit}}value="{{author.email}}"{{/if}}  
              />
            </div>
            {{#if edit}}
              <input type="hidden" name="id" value="{{author.id}}" />
            {{/if}}
            <div class="buttons-container">
              <a href="/admin-authors" class="btn button">
                Volver atras
              </a>
              <button
                type="button"
                class="btn button ms-1"
                id="btn-save"
              >
                {{#if edit}}Edit{{else}}Cre{{/if}}ar autor
              </button>
            </div>
          </form>
        </div>
      </div>
</section>